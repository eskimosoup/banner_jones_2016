<%= simple_form_for @payment do |f| %>
  <div class="field">
    <%= f.input :invoice_number, label: 'Reference number' %>
  </div>
  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.input :contact_number %>
  </div>
  <div class="field">
    <%= f.input :amount, as: :decimal %>
  </div>
  <div class="actions">
    <%= f.button :submit, "Continue", class: 'submit-button' %>
  </div>
<% end %>
