<% cache testimonial do %>
  <% present testimonial do |testimonial_presenter| %>
    <div class="testimonial-wrap">
      <div class="testimonial-content">
        <%= testimonial_presenter.recommendation %>
      </div>

      <div class="testimonial-author">
        <%= testimonial_presenter.author %>
      </div>

      <%= testimonial_presenter.lazy_show_image(alt: testimonial_presenter.author, class: 'testimonial-photo') %>
    </div>
  <% end %>
<% end %>
