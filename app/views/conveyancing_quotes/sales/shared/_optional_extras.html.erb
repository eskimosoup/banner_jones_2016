<ul class="conveyancing-cost">
  <li class="conveyancing-cost__item <%= 'conveyancing-cost__item--deselected' unless f.object.leasehold_house? %>">
    <%= link_to '#leasehold-house',
                class: 'toggle-class-closest conveyancing-cost__label',
                data: {
                  class: 'hide',
                  container: '.leasehold-house',
                  return: false
                } do %>
      <%= image_tag 'components/icons/tooltip.gif',
                    alt: 'Find out more',
                    class: 'conveyancing-cost__tooltip' %>

      <%= f.label :leasehold_house,
                  'Leasehold house' %>
    <% end %>

    <span class="conveyancing-cost__checkbox-wrap">
      <%= f.check_box :leasehold_house,
                      class: 'conveyancing-cost__checkbox' %>

      <%= link_to '',
                  class: "conveyancing-cost__toggle
                          #{'conveyancing-cost__toggle--hidden' if f.object.leasehold_house?}
                          conveyancing-cost__toggle--cross",
                  data: {
                    id: 'conveyancing_quotes_sale_leasehold_house'
                  } do %>
        <%= render partial: 'conveyancing_quotes/shared/svgs/cross' %>
      <% end %>

      <%= link_to '',
                  class: "conveyancing-cost__toggle
                          #{'conveyancing-cost__toggle--hidden' unless f.object.leasehold_house?}
                          conveyancing-cost__toggle--checkmark",
                  data: {
                    id: 'conveyancing_quotes_sale_leasehold_house'
                  } do %>
        <%= render partial: 'conveyancing_quotes/shared/svgs/checkmark' %>
      <% end %>
    </span>

    <span class="conveyancing-cost__fee">
      <%= number_to_currency costs[:leasehold_house] %>
    </span>

    <%= render 'conveyancing_quotes/shared/tooltips/leasehold_house' %>
  </li>

