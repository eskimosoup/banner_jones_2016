<div class="conveyancing-landing-hero-form__field">
  <div class="conveyancing-landing-page-hero-form__success">
    <%= render partial: 'conveyancing_quotes/shared/svgs/checkmark' %>
  </div>

  <%= f.label :price,
            'Selling Price',
            class: 'conveyancing-landing-hero-form__label' %>
  <%= f.text_field :price,
                    placeholder: 'e.g. Â£200,000',
                    class: 'conveyancing-landing-hero-form__input' %>


  <div class="conveyancing-landing-hero-form__options">
    <div class="conveyancing-landing-hero-form__options-field">
      <div class="conveyancing-custom-checkbox">
        <%= f.check_box :leasehold_house %>
        <%= f.label :leasehold_house,
                    '<span></span> Leasehold house'.html_safe,
                    class: 'conveyancing-landing-hero-form__options-label' %>
      </div>
    </div>

    <div class="conveyancing-landing-hero-form__options-field">
      <%= f.check_box :leasehold_apartment %>
      <%= f.label :leasehold_apartment,
                  'Leasehold apartment',
                  class: 'conveyancing-landing-hero-form__options-label' %>
    </div>
  </div>
</div>

