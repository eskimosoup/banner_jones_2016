<div class="conveyancing-quote purchase">
  <h1>Your Conveyancing Quote</h1>

  <%= render(
    partial: "conveyancing_quotes/user_details",
    locals: {
      quote: @conveyancing_quote_purchase
    }
  ) %>
  <div class="price">
    For a purchase at <%= number_to_currency @conveyancing_quote_purchase.price %>
  </div>
  <div class="purchase-fee">
    Our fees will be <%= number_to_currency @conveyancing_quote_purchase.fee %>
  </div>
  <div class="disbursements">
    <div class="stamp-duty">
      Stamp Duty Land Tax <%= number_to_currency @conveyancing_quote_purchase.stamp_duty %>
    </div>
  </div>
</div>
