<% cache cached do %>
<div class="hero-banner" role="banner">
  <div class="hero-banner-controls-wrap">
    <%= image_tag 'components/icons/hero/previous.png', alt: 'Previous', class: 'hero-banner-controls hero-banner-previous', title: 'Previous slide' %>
    <%= image_tag 'components/icons/hero/next.png', class: 'hero-banner-controls hero-banner-next', title: 'Next slide' %>
  </div>

  <div class="hero-banner-slick">
    <%= render partial: 'banners/banner', collection: banners, cache: true, as: :banner %>
  </div>

  <% if banner_services.present? && global_site_settings['Banner navigation'] == 'Vertical' %>
    <%#= render(
      partial: 'application/shared/hero_banner_navigation_vertical',
      locals: {
        banner_services: banner_services
      }
    ) %>
  <% end %>
</div>


  <% if banner_services.present? %>
    <section class="home-banner-services">
      <div class="home-banner-services__navigation">
        <ul class="home-banner-services__list">
            <% banner_services.each do |banner_service| %>
              <% present banner_service do |service_presenter| %>
                <%= content_tag :li,
                  service_presenter.linked_text(
                    (service_presenter.lazy_medium_icon(alt: '') + banner_service.title),
                    class: 'home-banner-services__service hero-banner-navigation-link-horizontal loaded', data: { colour: service_presenter.colour }
                ), class: 'home-banner-services__item' if service_presenter.medium_icon.present? %>
              <% end %>
            <% end %>
          </ul>
      </div>
    </section>

    <%#= render(
      partial: 'application/shared/hero_banner_navigation_horizontal',
      locals: {
        banner_services: banner_services
      }
    ) %>
  <% end %>
<% end %>
