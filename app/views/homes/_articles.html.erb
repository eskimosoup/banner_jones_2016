<section class="home-content-box-wrap">
  <div class="home-content-box home-articles-and-events-content-box inner">

    <%= link_to 'See All', articles_path, class: 'module-see-all home-articles' %>

    <div class="articles-home-content-box-slider-controls">
      <%= image_tag 'components/icons/content-box/previous.png', alt: 'Previous', class: 'home-content-box-previous', width: 11, height: 18 %>
      <%= image_tag 'components/icons/content-box/next.png', alt: 'Next', class: 'home-content-box-next', width: 11, height: 18 %>
    </div>

    <h2 class="home-content-box-title">
      News <%= 'and Events' if events.present? %>
    </h2>

    <div class="articles-slick">
      <%= render partial: 'events/home_event', collection: events, cached: true, as: :event if events.present? %>
      <%= render partial: 'articles/home_article', collection: articles, cached: true, as: :article if articles.present? %>
    </div>
  </div>

  <div class="home-twitter-feed">
    <div class="home-content-box">
      <a class="twitter-timeline" data-height="603" href="https://twitter.com/<%= global_site_settings['Twitter'] %>">Tweets by <%= global_site_settings['Twitter'] %></a>
    </div>
  </div>
</section>
