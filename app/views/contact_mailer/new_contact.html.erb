    <%= @contact.forename %>
  </p>
<% end %>

<% if @contact.surname.present? %>
  <p>
    <strong>Surname</strong><br />

    <%= @contact.surname %>
  </p>
<% end %>

<% if @contact.telephone.present? %>
  <p>
    <strong>Telephone</strong><br />

    <%= @contact.telephone %>
  </p>
<% end %>

<% if @contact.email.present? %>
  <p>
    <strong>Email</strong><br />

