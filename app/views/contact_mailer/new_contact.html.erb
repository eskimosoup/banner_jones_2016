  </p>
<% end %>

<% if @contact.service.present? %>
  <p>
    <strong>Service</strong><br />

    <%= @contact.service %>
  </p>
<% end %>

<% if @contact.enquiry_type.present? %>
  <p>
    <strong>Enquiry type</strong><br />

    <%= @contact.enquiry_type %>
  </p>
<% end %>

<% if @contact.how_heard.present? %>
  <p>
    <strong>How did you find us?</strong><br />

    <%= @contact.how_heard %>
  </p>
<% end %>

<% if @contact.message.present? %>
  <p>
    <strong>Message</strong><br />

    <%= simple_format @contact.message %>
