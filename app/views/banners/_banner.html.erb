<div class="hero-banner-item">
  <div class="hero-banner-item-wrap">
    <div class="hero-banner-item-content">
      <% present banner do |banner_presenter| %>
        <h1 class="hero-banner-item-title">
          <%= banner_presenter.title %>
        </h1>

        <div class="hero-banner-item-summary">
          <%= banner_presenter.summary %>
        </div>

        <%= banner_presenter.button(class: 'hero-banner-item-button') %>
      <% end %>
    </div>
  </div>

  <% present banner do |banner_presenter| %>
    <%= banner_presenter.image(class: 'hero-banner-image') %>
  <% end %>
</div>
