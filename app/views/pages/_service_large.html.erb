<div class="<%= @side_menus.blank? ? 'content-area' : 'large-content' %>">
  <% if @side_menus.present? %>
    <% cache @side_menus do %>
      <aside class="large-content__aside">
        <div class="large-content-aside-sticky">
        <%#= @side_menus.last.related_menu_items(@page).first.first.link.menu_resource %>
        <%#= page_sidebar_menu_items(menu_items: @side_menus.last.related_menu_items(@side_menus.last.related_menu_items(@page).first.first.link.menu_resource)) %>
        <%#= page_sidebar_menu_items(menu_items: @side_menus.last.root_menu_items(@page)) %>
          <%= render 'pages/shared/navigation',
                      menu_items: @side_menus.last.root_menu_items(@page),
                      page: @page,
                      cached: "page_#{@page.id}" %>
        </div>
      </aside>
    <% end %>
  <% end %>

  <main class="large-content__main <%= "large-content__main--full" if @side_menus.blank? %>">
    <section class="large-content-element">
      <div class="large-content-element__section">
        <div class="large-content-inner">
          <div class="large-content-inner__main">
            <h1 class="large-content-inner__title">
              <%= @page.title %>
            </h1>

            <div class="large-content-inner-styles">
              <%= raw @page.content %>
            </div>
          </div>

          <aside class="large-content-inner__aside">
            <div class="service-team-member">
                <p>
                  Talk to our team today on:<br />

                  <%= link_to "tel:#{global_site_settings['Phone'].tr(' ', '')}",
                              class: 'conveyancing-call-to-action
                                      service-team-member__phone
                                      ga-event',
                              data: {
                                event_category: 'Conveyancing Calculator',
                                event_action: 'Click',
                                event_label:  'Phone'
                              } do %>
                    <span class="calltracks_bannerjonescouk-main">
                      <%= global_site_settings['Phone'] %>
                    </span>
                  <% end %>
                </p>

                <%#= render partial: 'services/onpage_navigations/conveyancing/shared/team_member',
                            collection: @service.team_members.key_team_members,
                            cached: true,
                            as: :team_member %>

                <div class="service-cta-block">
                  <div class="service-cta-block__contact">
                  <%= link_to '#',
                            class: 'conveyancing-footer__cta-button toggle-class ga-event',
                            data: {
                              class: 'visible',
                              container: '.remote-contact-form-modal',
                              return: false,
                              event_category: 'Conveyancing Calculator',
                              event_action: 'Click',
                              event_label:  'Email'
                              } do %>
                    <%= image_tag 'components/icons/sticky-email.png', alt: 'Send an enquiry' %>
                    Email us
                  <% end %>
                  </div>
                  <div class="service-cta-block__contact">
                    <%= link_to '#',
                              class: 'conveyancing-footer__cta-button toggle-class ga-event',
                              data: {
                                class: 'visible',
                                container: '.remote-callback-request-form-modal',
                                return: false,
                                event_category: 'Conveyancing Calculator',
                                event_action: 'Click',
                                event_label:  'Request a callback'
                              } do %>
                      <%= image_tag 'components/icons/sticky-callback.png', alt: 'Callback request' %>
                      Request a callback
                    <% end %>
                  </div>
                </div>
            </div>

            <% if @rich_snippet.present? %>
              <% cache @rich_snippet do %>
                <div class="service-rich-snippets">
                  <%= render(
                          "rich_snippets/rich_snippet",
                          rich_snippet: @rich_snippet
                        ) %>
                </div>
              <% end %>
            <% end %>
          </aside>
        </div>
      </div>
    </section>
  </main>
</div>
