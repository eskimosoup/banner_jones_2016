      <%= social_icon 'Twitter' %>
      <%= social_icon 'YouTube' %>
      <%= social_icon 'LinkedIn' %>
      <%= social_icon 'Google Plus' %>
      <%= social_icon 'Facebook' %>
    </div>

    <div class="social-contact-methods">
      <div class="contact-method">
        <span class="contact-method-accent">
          e:
        </span>
        <%= site_setting 'Email' %>
      </div>

      <div class="contact-method">
        <span class="contact-method-accent">
