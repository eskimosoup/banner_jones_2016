<!DOCTYPE html>
<!--[if IE 9]><html lang="en" class="ie ie9 lte9"> <![endif]-->
<html lang="en">
  <%= render 'layouts/shared/head' %>

  <body>
    <%= render 'layouts/tag_manager' %>
    <%= render 'layouts/application/header' %>

    <%#= content_for :custom_telephone do global_site_settings['Phone - Mediation'] end if @service.title == 'Mediation' %>
    <%= content_for :custom_telephone do global_site_settings['Phone - Wealth Management'] end if @service.layout == 'wealth_management' %>

    <%= render 'services/shared/show_header' %>

    <div class="page-content-wrap">
      <div class="page-content full">
        <% present @service do |service_presenter| %>
          <h1 class="service-page-title" style="<%= service_presenter.colour_property_helper('border-color') %>">
            <%= yield :content_title %>
            <%= service_presenter.small_icon({alt: service_presenter.title, class: 'service-page-icon'}) %>
          </h1>

          <main class="conveyancing-content">
            <%= yield %>
          </main>
        <% end %>
      </div>

      <aside class="page-additional-information">
        <div class="service-page-additional-information-key-team-members">
          <div class="service-page-additional-information-key-team-members-title">
            <h3>
              Talk to our<br />
              <%= @service.title %> team
            </h3>
          </div>

          <div class="service-page-additional-information-key-team-members-profiles">
            <div class="multiple-team-members-slick">
              <%= render partial: 'services/shared/key_team_member_avatars', collection: @service.team_members.key_team_members, cached: true, as: :team_member %>
            </div>
          </div>
        </div>

        <% unless defined?(hide_call_us) %>

          <% if yield(:custom_telephone).present? %>
            <% telephone = yield(:custom_telephone) %>
          <% else %>
            <% telephone = global_site_settings['Phone'] %>
          <% end %>

          <% if telephone.present? %>
            <%= link_to "tel:#{telephone.tr(' ', '')}", class: 'conveyancing-call-to-action' do %>
              <div class="conveyancing-call-to-action-title">
                Call us for your conveyancing quote
                <div class="<%= 'calltracks_bannerjonescouk-main' unless yield(:custom_telephone).present? %>">
                  <%= telephone %>
                </div>
              </div>

              <div class="conveyancing-call-to-action-icon">
                <%= image_tag 'components/icons/call-to-action/white-telephone.png', alt: 'Telephone' %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <% if @rich_snippet.present? %>
          <div class="service-rich-snippets">
            <%= render(
              "rich_snippets/rich_snippet",
              rich_snippet: @rich_snippet
            ) %>
          </div>
        <% end %>

        <div class="conveyancing-accreditations">
          <%= image_tag 'components/conveyancing-calculator/conveyancing-accreditation.png', alt: 'Conveyancing Quality' %>
          <%= image_tag 'components/conveyancing-calculator/conveyancing-award.png', alt: 'The Conveyancing Awards' %>
        </div>
      </aside>
    </div>


    <%= render 'layouts/application/footer' %>

    <%= render 'layouts/shared/javascripts' %>
  </body>
</html>
