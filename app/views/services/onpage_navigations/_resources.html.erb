<div class="row collapse">
  <% #@service.resources.displayed.limit(onpage_navigation.results_limit).each do |resource| %>
  <% @service.resources.displayed.limit(onpage_navigation.results_limit).each do |resource| %>
    <% present resource do |resource_presenter| %>
      <% # medium-<%= onpage_navigation.results_limit.present? ? width_calculator(onpage_navigation.results_limit) : (12 / @service.resources.displayed.limit(onpage_navigation.results_limit).size) %>
      <div class="<%= 'end' if resource == @service.resources.displayed.limit(onpage_navigation.results_limit).last %> columns"
            style="width: <%= 100 / @service.resources.displayed.limit(onpage_navigation.results_limit).size %>%">
        <div class="standard-content-box onpage-navigation-item">
          <h2 class="standard-content-box-title">
            <%= resource_presenter.title %>
          </h2>

          <%= resource_presenter.linked_download(resource_presenter.index_image({alt: resource_presenter.title, class: 'service-resource-image'}), {title: resource_presenter.title , target: '_blank' }) if resource_presenter.index_image.present? %>

          <%= resource_presenter.linked_download('Download', {class: 'service-resource-download-button', title: resource_presenter.title, target: '_blank' }) %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
