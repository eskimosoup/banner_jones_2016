<%= form_for(@conveyancing_quotes_location) do |f| %>
  <% if @conveyancing_quotes_location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conveyancing_quotes_location.errors.count, "error") %> prohibited this conveyancing quotes location from being saved:</h2>
      <ul>
        <% @conveyancing_quotes_location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Media</a></li>
      <li><a href="#tabs-3">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>
    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :location %><br>
        <%= f.select :location, ConveyancingQuotes::QuoteLocation::LOCATIONS %>
      </div>
      <div class="field">
        <%= f.label :details %><br>
        <%= f.text_area :details, class: 'tinymce' %>
      </div>
    <% end %>
    <%= field_set_tag nil, id: 'tabs-2' do %>
    <% end %>
    <%= field_set_tag nil, id: 'tabs-3' do %>
      <%= render 'optimadmin/shared/suggested_url_field', f: f %>
      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
