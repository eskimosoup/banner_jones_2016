<%= render 'optimadmin/shared/header/main_title', title: 'Manage Conveyancing Quotes Locations' %>
<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Conveyancing Quotes Location', object: ConveyancingQuotes::QuoteLocation, path: new_conveyancing_quotes_quote_location_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC'], ['Displayed', 'display DESC'], ['Hidden', 'display ASC']] %> -->
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @conveyancing_quotes_locations.size, path: root_url %>
  </div>
  <div class="row collapse module-list-index header">
    <%= list_item 'large-8 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>
  <!-- <div class="module-sortable" data-module="ConveyancingQuotes::QuoteLocation"> -->
  <%= render partial: 'conveyancing_quotes_location', collection: @conveyancing_quotes_locations, as: :conveyancing_quotes_location %>
  <!-- </div> -->
  <%= paginate @conveyancing_quotes_locations %>
</div>
