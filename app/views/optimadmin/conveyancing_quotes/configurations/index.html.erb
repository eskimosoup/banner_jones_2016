<%= render 'optimadmin/shared/header/main_title', title: "Manage #{::ConveyancingQuotes::Configuration.model_name.human.pluralize.titleize}" %>
<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: ::ConveyancingQuotes::Configuration.model_name.human.titleize, object: ::ConveyancingQuotes::Configuration, path: new_conveyancing_quotes_configuration_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%#= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC'], ['Displayed', 'display DESC'], ['Hidden', 'display ASC']] %> -->
    <!-- <%#= render 'optimadmin/shared/module/index/recycle_bin', items: @conveyancing_quotes_configurations.size, path: root_url %> -->
  </div>
  <div class="row collapse module-list-index header">
    <% # ADD TWO TO THE TITLE LARGE COLUMN SIZE BELOW TO ACCOUNT FOR NO IMAGE %>
    <%= list_item 'large-10 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>
  <!-- <div class="module-sortable" data-module="ConveyancingQuotes::Configuration"> -->
  <%= render partial: 'conveyancing_quotes_configuration', collection: @conveyancing_quotes_configurations, as: :conveyancing_quotes_configuration %>
  <!-- </div> -->
  <%= paginate @conveyancing_quotes_configurations %>
</div>
