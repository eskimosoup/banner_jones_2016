<%= render 'optimadmin/shared/header/main_title', title: "Manage #{Resources::Section.model_name.human.pluralize.titleize}" %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: Resources::Section.model_name.human.titleize, object: Resources::Section, path: new_resources_section_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC'], ['Displayed', 'display DESC'], ['Hidden', 'display ASC']] %> -->
    <!-- <%= render 'optimadmin/shared/module/index/recycle_bin', items: @resources_sections.size, path: root_url %> -->
  </div>

  <div class="row collapse module-list-index header">
        <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    
    
        <%= list_item 'large-5 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    
        <%= list_item('large-2 hide-for-medium-down') { 'Image' } %>
    
    <%= list_item('large-1 small-4 text-center') { 'Display' } %>
    <%= list_item('large-1 small-4 text-center') { 'View' } %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>

    <div class="module-sortable" data-module="Resources::Section">
    <%= render partial: 'resources_section', collection: @resources_sections, as: :resources_section %>
  </div>
  
  <%= paginate @resources_sections %>
</div>
