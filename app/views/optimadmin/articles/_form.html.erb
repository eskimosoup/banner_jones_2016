<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %>
        prohibited this article from being saved:
    </h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li>
        <a href="#tabs-1">Content</a>
      </li>
      <li>
        <a href="#tabs-2">Media</a>
      </li>
      <li>
        <a href="#tabs-3">Settings</a>
      </li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>
    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :summary %><br>
        <%= f.text_area :summary %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content, class: 'tinymce' %>
      </div>
      <%= f.datepicker_field :date %>
    <% end %>
    <%= field_set_tag nil, id: 'tabs-2' do %>
      <%= f.image_field :image %>
      <div class="field">
        <%= f.label :social_share_title %><br>
        <%= f.text_field :social_share_title %>
      </div>
      <div class="field">
        <%= f.label :social_share_description %><br>
        <%= f.text_field :social_share_description %>
      </div>
      <%= f.image_field :social_share_image %>
    <% end %>
    <%= field_set_tag nil, id: 'tabs-3' do %>
      <div class="field">
        <%= f.label :article_category_id %><br>
        <%= f.select :article_category_id, ArticleCategory.pluck(:title, :id), prompt: 'Please select' %>
      </div>
      <div class="field">
        <%= f.label :team_member_id %><br>
        <%= f.select :team_member_id, TeamMember.all.map{|x| ["#{x.forename} #{x.surname}", x.id]}, prompt: 'Please select' %>
      </div>
      <%= render 'optimadmin/shared/service_select_field', f: f %>
      <%= render 'optimadmin/shared/suggested_url_field', f: f %>
      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
      <div class="field">
        <%= f.label :home_page_highlight %><br>
        <%= f.check_box :home_page_highlight %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
    <%= f.submit "Save and continue editing" %>
  </div>
<% end %>
