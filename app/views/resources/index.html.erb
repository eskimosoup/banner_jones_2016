<%= render 'resources/shared/index_header' %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'https://unpkg.com/masonry-layout@4.0/dist/masonry.pkgd.min.js' %>
  <script>
    $(window).load(function() {
      $('.module-index').masonry({
        itemSelector: '.index-module'
      });
    });
  </script>
<% end %>


<div class="module-inner-content">
  <div class="module-index">
    <%= render partial: 'resources/resource', collection: @resources, as: :resource %>
  </div>

  <div class="module-pagination">
    <%= paginate @resources %>
  </div>
</div>
