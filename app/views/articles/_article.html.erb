<% present article do |article_presenter| %>
  <%= article_presenter.linked_text(article_presenter.title, { title: article_presenter.title }) %>
  <%= article_presenter.linked_text(article_presenter.index_image({ alt: article_presenter.title })) %>
  <%= article_presenter.summary %>
  <%= article_presenter.linked_text('Read more >') %>

  <%= render partial: 'articles/shared/categories', collection: article.article_categories.displayed, as: :article_category %>
  <%= render partial: 'articles/shared/team_members', collection: article.team_members.displayed, as: :team_member, locals: { article_presenter: article_presenter } %>
<% end %>
