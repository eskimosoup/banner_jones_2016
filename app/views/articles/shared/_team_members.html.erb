<% present team_member do |team_member_presenter| %>
  <%= link_to team_member, title: team_member_presenter.full_name do %>
    <div class="index-module-author">
      <div class="index-module-author-details">
        <div class="article-author-name">
          <%= team_member_presenter.full_name %>
        </div>

        <div class="article-author-audience">
          <%= team_member.root_services.first.title if team_member.root_services.present? %>
        </div>
      </div>
      <%= content_tag :div, (article_presenter.linked_text(team_member_presenter.small_image(alt: team_member_presenter.full_name))), class: 'index-module-author-photo team-member-avatar' if team_member_presenter.small_image.present? %>
    </div>
    <% end %>
<% end %>
