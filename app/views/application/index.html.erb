<%= content_for :head do %>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css' %>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css' %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery.matchHeight/0.7.0/jquery.matchHeight-min.js' %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.js' %>
  <%= javascript_include_tag 'components/home-components.js' %>
  <%= javascript_include_tag 'components/shared-components.js' %>
<% end %>

<section class="hero-banner">
  <div class="hero-banner-controls-wrap">
    <%= link_to '#', class: 'hero-banner-controls hero-banner-previous',
                     title: 'Previous slide' do %>
      <%= image_tag 'components/icons/hero/previous.png', alt: '' %>
    <% end %>
    <%= link_to '#', class: 'hero-banner-controls hero-banner-next',
                     title: 'Next slide' do %>
      <%= image_tag 'components/icons/hero/next.png', alt: '' %>
    <% end %>
  </div>

  <div class="hero-banner-slick">
    <%= render partial: 'banners/banner', collection: @banners, as: :banner %>
  </div>

  <%= render 'application/shared/hero_banner_navigation_vertical' if global_site_settings['Banner navigation'] == 'Vertical' %>
</section>

<%= render 'application/shared/hero_banner_navigation_horizontal' if global_site_settings['Banner navigation'] == 'Horizontal' %>

<div class="content">
  <section class="home-content-box-wrap">
    <div class="home-content-box inner">
      <div class="helpful-guide-home-content-box-slider-controls">
        <%= link_to '#', class: 'home-content-box-previous', title: 'Previous' do %>
          <%= image_tag 'components/icons/content-box/previous.png', alt: '' %>
        <% end %>
        <%= link_to '#', class: 'home-content-box-next', title: 'Next' do %>
          <%= image_tag 'components/icons/content-box/next.png', alt: '' %>
        <% end %>
      </div>

      <h2 class="home-content-box-title">
        Our Helpful Guides
      </h2>

      <div class="helpful-guides-slick">
        <%= render partial: 'resources/resource_shelf',
                  collection: @resources, as: :resource if @resources.present? %>
      </div>
    </div>
  </section>

  <section class="home-content-box-wrap">
    <div class="home-content-box home-team-members">
      <h2 class="home-content-box-title">
        Find People By
      </h2>

      <%= form_tag search_team_members_path, method: :get, remote: true, class: 'home-team-member-search-form' do %>
        <div class="home-team-member-search-field">
          <%= text_field_tag :name, '', placeholder: 'Name',
                                        class: 'home-team-member-search-name' %>
        </div>
        <div class="home-team-member-search-field">
          <%= select_tag :service_id, options_for_select(@services),
                                   prompt: 'Service',
                                   class: 'home-team-member-search-service' %>
        </div>
        <%= submit_tag 'Search', class: 'home-team-member-search-button' %>
      <% end %>

      <div class="home-team-members-home-content-box-slider-controls">
        <%= link_to '#', class: 'home-content-box-previous', title: 'Previous' do %>
          <%= image_tag 'components/icons/content-box/previous.png', alt: '' %>
        <% end %>

        <%= link_to '#', class: 'home-content-box-next', title: 'Next' do %>
          <%= image_tag 'components/icons/content-box/next.png', alt: '' %>
        <% end %>
      </div>

      <div class="home-team-members-profiles">
        <div class="home-team-members-slick">
          <%= render partial: 'team_members/home_team_member',
                    collection: @team_members, as: :team_member if @team_members.present? %>
        </div>

        <div class="home-team-members-slick-profile">
          <%= render 'team_members/profile_card', team_member: @team_members.first if @team_members.present? %>
        </div>
      </div>
    </div>
  </section>

    <section class="home-content-box-wrap">
      <div class="home-content-box inner testimonials">
        <h2 class="home-content-box-title testimonials-title">
          A People Business
        </h2>

        <div class="testimonials-slick">
          <%= render @testimonials %>
        </div>
      </div>
    </section>

    <section class="home-content-box-wrap">
      <div class="home-content-box inner">
        <div class="articles-home-content-box-slider-controls">
          <%= link_to '#', class: 'home-content-box-previous', title: 'Previous' do %>
            <%= image_tag 'components/icons/content-box/previous.png', alt: '' %>
          <% end %>
          <%= link_to '#', class: 'home-content-box-next', title: 'Next' do %>
            <%= image_tag 'components/icons/content-box/next.png', alt: '' %>
          <% end %>
        </div>

        <h2 class="home-content-box-title">
          News
        </h2>

        <div class="articles-slick">
          <%= render partial: 'articles/home_article', collection: @articles, as: :article %>
        </div>
      </div>
    </section>
  </div>
